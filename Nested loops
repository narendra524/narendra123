#patterns
let rows = 5;  
for (let i = 1; i <= rows; i++) {
  let output = '';
  for (let j = 1; j <= i; j++) {
    output += '*';
  }
  console.log(output);
}

op:
*
**
***
****
*****

#pyramid patterns
let rows = 5;  
for (let i = 1; i <= rows; i++) {
  let output = '';
  
  for (let j = 1; j <= rows - i; j++) {
    output += ' ';
  }
  
  for (let j = 1; j <= (2 * i - 1); j++) {
    output += '*';
  }
  console.log(output);
}
op:
    *
   ***
  *****
 *******
*********

